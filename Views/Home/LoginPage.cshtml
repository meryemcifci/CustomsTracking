@model EntityLayer.LoginPage
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="form-container">

    <div class="form-header">
        Araç Girişi Yap
    </div>

    <form asp-action="LoginPage" method="post" m-5 p-4>
        <div class="form-group">
            <label>Plaka:</label>
            <input class="form-control" asp-for="Plate" />
        </div>
        
        <div>
            <label>Dorse Plakası:</label>
            <input class="form-control"asp-for="TrailerPlate" />
        </div>

        <div>
            <label>Yön ID:</label>
            <input class="form-control" asp-for="DirectionId" />
        </div>

        <div>
            <label>İşlem Tarihi:</label>
        <input class="form-control" asp-for="TransactionDate" />

        <button type="submit">Giriş Yap</button>
    </form>

    <div>
        <a asp-action="LoginList" class="btn btn-primary"> Giriş Yapan Araçları Listele</a>
    </div>
    
</div>
    <style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f3f4f6; 
    }

    .form-container {
        margin: 40px auto;
        width: 100%;
        max-width: 500px;
        background-color: white;
        border: 2px solid #222d56;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }


    .form-header {
        background-color: #222d56;
        color: #fff;
        padding: 10px;
        text-align: center;
        border-radius: 8px 8px 0 0;
        margin-bottom: 20px;
        font-size: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        color: #222d56;
    }

    input[type="text"],
    input[type="date"] {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-sizing: border-box;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    input[type="text"]:focus,
    input[type="date"]:focus {
        border-color: #d5ab65;
        outline: none;
    }

    button[type="submit"] {
        background-color: #d5ab65;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        width: 100%;
        font-size: 14px;
        transition: background-color 0.3s;
        margin-top: 10px;
    }

    button[type="submit"]:hover {
        background-color: #c49b5b;
    }

    a.btn {
        display: block;
        background-color: #222d56;
        color: white;
        text-align: center;
        padding: 10px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        margin-top: 15px;
        transition: background-color 0.3s;
    }

    a.btn:hover {
        background-color: #1b1f42;
    }

</style>




